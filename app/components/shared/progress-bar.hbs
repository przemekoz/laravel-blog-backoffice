{{#if @isProgress}}
  <div class="progress" style="height: 8px;" ...attributes>
    <div class="progress-bar progress-bar-striped progressBar" role="progressbar" aria-valuenow="100"
      aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
  </div>
{{else}}

  <div style="height: 8px; width: 100%" ...attributes></div>
{{/if}}