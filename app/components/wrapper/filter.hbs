<form class="form-inline" {{action "submit" on="submit"}} autocomplete="off">
  <div class="container-fluid">
    <div class="row">

      {{yield}}

      <div class="col-3 filter-column">
        <button type="reset" class="btn btn-outline-secondary btn-sm" {{on 'click' this.reset}}>
          <i class="fa fas fa-remove"></i> {{lang "Clear"}}
        </button>
        <button type="submit" class="btn btn-outline-primary btn-sm">
          <i class="fa fas fa-search"></i> {{lang "Search"}}
        </button>
      </div>
    </div>
  </div>
</form>