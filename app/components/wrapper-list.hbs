<i>I'm component WrapperList</i>


<div class="container-fluid mb-3">
  <div class="row">
    <div class="col-10">
      {{!-- dynamically render component: {modelName}/filter --}}
      {{component this.filterComponentName onSubmit=this.handleFilterChange}}
    </div>
    <div class="col-2">
      <SortChooser @value={{this.sort}} @sortOptions={{@sortOptions}} @onChange={{action this.handleSortChange}} />
    </div>
  </div>
</div>



{{!-- dynamically render component: {modelName}/list --}}
{{component this.listComponentName data=@data onDelete=this.handleDelete}}


<Pagination @size={{@meta.size}} @total={{@meta.total}} @currentPage={{@meta.currentPage}}
  @totalPages={{@meta.totalPages}} @onChangePage={{action this.handlePageChange}}
  @onChangeSize={{action this.handleSizeChange}} @sizeOptions={{this.sizeOptions}} />

<hr />